  .right_text {
    margin-left: 10rpx;
  }
  .weui-cell__ft{
  width:100%;
  }
  .bottomshow{
    position: fixed;
    width: 100%;
    bottom: 3.75%;
  }
  .buttonshow{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    margin: 0 5rpx;
  }
  .loading{
    padding: 10rpx;
    text-align: center;
  }
  .loading:before{
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background-size: contain;
    animation: rotate 1s linear infinite;
  }
  .loading.complete:before{
    display: none;
  }
